@model IList<Post>

@if (Model.Count == 0)
{
    <article>
        <p>Ops! Não encontrei postagens com o termo "@ViewBag.TermoBuscado"</p>
    </article>
}
else if (ViewBag.TermoBuscado != null)
{
    <h3>Exibindo resultados para "@ViewBag.TermoBuscado"</h3>
}

@foreach (Post p in Model)
{
    <article>
        <h1>@p.Titulo</h1>
        <p>@p.Resumo</p>
    </article>
}